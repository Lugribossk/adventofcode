{
    "compilerOptions": {
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "outDir": "./target",
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": [
        "src/**/*.ts*",
        "node_modules/@types/**/*.ts"
    ]
}