{
    "name": "adventofcode",
    "version": "0.0.1",
    "private": true,
    "engines": {
        "node": ">= 18.12.1",
        "npm": ">= 8.19.2"
    },
    "volta": {
        "node": "18.12.1",
        "npm": "8.19.2"
    },
    "scripts": {
        "test": "npm run ts && npm run eslint && npm run prettier:check && npx type-coverage",
        "prettier:fix": "prettier --write --cache \"src/**/*.ts\" \".github/**/*.yml\" .eslintrc.js package.json tsconfig.json",
        "prettier:check": "prettier --check --cache \"src/**/*.ts\" \".github/**/*.yml\" .eslintrc.js package.json tsconfig.json",
        "ts": "tsc --noEmit",
        "eslint": "eslint --max-warnings=0 --report-unused-disable-directives --cache --cache-location ./target/.eslintcache src"
    },
    "typeCoverage": {
        "atLeast": 100,
        "detail": true
    },
    "dependencies": {
        "@swc/core": "1.3.19",
        "prettier": "2.8.0",
        "ts-node": "10.9.1",
        "typescript": "4.9.3"
    },
    "devDependencies": {
        "@types/node": "18.11.10",
        "@types/prettier": "2.7.1",
        "@typescript-eslint/eslint-plugin": "5.45.0",
        "@typescript-eslint/parser": "5.45.0",
        "eslint": "8.28.0",
        "eslint-config-prettier": "8.5.0",
        "type-coverage": "2.24.1"
    }
}
