{
    "name": "adventofcode",
    "version": "0.0.1",
    "private": true,
    "engines": {
        "npm": ">= 8.1.2",
        "node": ">= 16.13.2"
    },
    "scripts": {
        "test": "npm run ts && npm run eslint && npm run prettier:check && npx type-coverage",
        "prettier:fix": "prettier --write \"src/**/*.ts\"",
        "prettier:check": "prettier --check \"src/**/*.ts\"",
        "ts": "tsc --noEmit",
        "eslint": "eslint --max-warnings=0 --report-unused-disable-directives --cache --cache-location ./target/.eslintcache src"
    },
    "typeCoverage": {
        "atLeast": 100,
        "detail": true
    },
    "dependencies": {
        "@swc/core": "1.2.137",
        "prettier": "2.5.1",
        "ts-node": "10.5.0",
        "typescript": "4.5.5"
    },
    "devDependencies": {
        "@types/node": "16.11.7",
        "@types/prettier": "2.4.3",
        "@typescript-eslint/eslint-plugin": "5.4.0",
        "@typescript-eslint/parser": "5.4.0",
        "eslint": "8.3.0",
        "eslint-config-prettier": "8.3.0",
        "type-coverage": "2.21.0"
    }
}
